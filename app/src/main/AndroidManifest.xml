<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.administrator.newapplication">

    <!-- 噪音检测 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>

    <!-- 地图定位方面的权限 -->
    <!-- 这个权限用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <!-- 这个权限用于访问GPS定位-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>
    <!-- 用于读取手机当前的状态-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <!-- 访问网络，网络定位需要上网-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- SD卡读取权限，用户写入离线定位数据-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions"></uses-permission>

    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 读取log -->
    <uses-permission
        android:name="android.permission.READ_LOGS"
        tools:ignore="ProtectedPermissions" />

    <!-- 闪屏页作为程序的入口 -->
    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="健康每一天"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="label,allowBackup">
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="NjRQVGUvFzouYKeEBlw9Qo0v0LkOlCcz" />

        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/NoActivityFullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />
        <!-- 主页 -->
        <activity
            android:name=".MainActivity"
            android:label="健康每一天" />
        <!-- 引导页 -->
        <activity
            android:name=".ui.GuideActivity"
            android:theme="@style/NoActivityFullscreen" />
        <!-- 登录 -->
        <activity
            android:name=".ui.LoginActivity"
            android:label="登录" />
        <!-- 注册 -->
        <activity
            android:name=".ui.RegisteredActivity"
            android:label="注册" />
        <!-- 忘记密码 -->
        <activity
            android:name=".ui.ForgetPasswordActivity"
            android:label="忘记密码" />
        <!-- 个人中心 -->
        <activity
            android:name=".ui.PersonalActivity"
            android:label="个人中心" />
        <!-- 查询快递 -->
        <activity
            android:name=".ui.CourierActivity"
            android:label="快递查询" />
        <!-- 归属地查询 -->
        <activity
            android:name=".ui.PhoneActivity"
            android:label="归属地查询" />
        <!-- 版本更新 -->
        <activity
            android:name=".ui.UpdateActivity"
            android:label="版本更新" />
        <!-- 搜索功能 -->
        <activity
            android:name=".ui.SearchActivity"
            android:theme="@style/OtherTheme" />
        <!-- 身边环境 -->
        <activity
            android:name=".ui.EnvironmentActivity"
            android:label="身边环境" />
        <!-- 健康管家 -->
        <activity
            android:name=".ui.HealthyActivity"
            android:label="健康管家" />
        <activity
            android:name=".ui.TreeActivity"
            android:label="树苗规则" />
        <activity
            android:name=".ui.WriteActivity"
            android:label="天天签到" />
        <activity android:name=".ui.RegisterActivity" />
        <!-- 生成二维码 -->
        <activity
            android:name=".ui.QrCodeActivity"
            android:label="二维码工厂" />
        <!-- 新闻详情 -->
        <activity android:name=".ui.WebViewActivity" />
        <!-- 食物大全 -->
        <activity android:name=".ui.FoodActivity" />
        <activity
            android:name=".ui.ClockActivity"
            android:label="闹钟设置"></activity>
        <activity
            android:name=".ui.WelcomeActivity"
            android:theme="@style/NoisyTheme"></activity>
        <activity
            android:name=".ui.NoisyActivity"
            android:theme="@style/NoisyTheme"></activity>
        <activity android:name=".ui.RecognitionActivity"
            android:label="识别功能">

        </activity>
    </application>

</manifest>